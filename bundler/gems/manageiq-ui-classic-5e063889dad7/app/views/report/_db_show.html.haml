%h3
  = _('Basic Information')
.form-horizontal
  .form-group
    %label.control-label.col-md-2
      = _('Name')
    .col-md-8
      %p.form-control-static
        = h(widget.name)
  .form-group
    %label.control-label.col-md-2
      = _('Tab Title')
    .col-md-8
      %p.form-control-static
        = h(widget.description)
  .form-group
    %label.control-label.col-md-2
      = _('Locked')
    .col-md-8
      %p.form-control-static
        - if widget.set_data
          = widget.set_data[:locked] ? _("Yes") : _("No")
  .form-group
    %label.control-label.col-md-2
      = _('Reset Dashboard upon login')
    .col-md-8
      %p.form-control-static
        - if widget.set_data
          = widget.set_data[:reset_upon_login] ? _("Yes") : _("No")
%hr
= render :partial => 'db_widgets', :locals => {:widget => widget}
